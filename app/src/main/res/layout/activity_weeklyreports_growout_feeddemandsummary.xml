<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:drawableLeft="@drawable/ic_keyboard_arrow_left_white_24dp"
        android:background="@color/accent_material_light"
        android:gravity="center">

        <TextView
            android:text="Weekly Demands"
            android:maxLines="15"
            android:scrollbars="vertical"
            android:layout_marginLeft="0dp"
            android:textSize="20sp"
            android:paddingRight="10dp"
            android:paddingLeft="0dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:id="@+id/titlebar_header"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="@color/background_material_light"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"/>

    </LinearLayout>

    <TextView
        android:gravity="center"
        android:paddingLeft="4dp"
        android:paddingRight="4dp"
        android:background="#efefef"
        android:textSize="16sp"
        android:textStyle="bold"
        android:paddingTop="4dp"
        android:paddingBottom="4dp"
        android:id="@+id/lbl_weeklyreports_grow_out_summary"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Farm Name2"/>


    <RelativeLayout android:layout_width="fill_parent"
                  android:layout_height="wrap_content">

        <LinearLayout android:layout_width="wrap_content"
                      android:layout_height="fill_parent"
                      android:layout_centerInParent="true"
                      android:orientation="vertical"
                      android:gravity="center"
                      android:id="@+id/llnoQuery"
            >

            <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content"
                       android:src="@drawable/fish"/>
            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="No reports for selected week"
                      android:textColor="@color/gray_200"
                />

        </LinearLayout>

        <ListView android:layout_width="fill_parent"
                  android:layout_height="wrap_content"
                  android:id="@+id/lv_growout_feedconsumption_summary"
                  android:visibility="gone"
            >

        </ListView>




        <FrameLayout android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:layout_alignParentBottom="true"
                     android:layout_alignParentRight="true"
            >
            <ImageButton android:layout_width="wrap_content"
                         android:background="@drawable/bg_red_oval"
                         android:padding="12dp"
                         android:layout_margin="12dp"
                         android:layout_height="wrap_content"
                         android:src="@drawable/ic_filter_white_24dp"
                         android:id="@+id/btn_filter"/>
        </FrameLayout>



    </RelativeLayout>


</LinearLayout>