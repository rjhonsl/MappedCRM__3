<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:paddingLeft="12dp"
              android:paddingRight="12dp"
              android:paddingTop="9dp"
              android:paddingBottom="9dp"
              android:id="@+id/ll_item_weekLyReportWrapper"
              android:orientation="vertical"
              android:layout_width="fill_parent"

              android:layout_height="wrap_content">

    <LinearLayout android:layout_width="fill_parent"
                  android:layout_height="wrap_content"
                  android:orientation="horizontal"
                  android:gravity="center"

        >

        <LinearLayout android:layout_width="60dp"
                      android:id="@+id/weeknoHOlder"
                      android:background="@drawable/bg_amber_oval"
                      android:layout_height="60dp"
                      android:orientation="vertical"
                      android:gravity="center"
            >

        <TextView android:layout_width="wrap_content"
               android:textColor="#FFFFFF"
               android:layout_height="wrap_content"
               android:id="@+id/itemlv_managepond_initials"
               android:textSize="30sp"
               android:text="1"
               android:gravity="center"/>


        </LinearLayout>


            <LinearLayout android:layout_width="wrap_content"
                          android:padding="5dp"
                          android:layout_weight="1"
                          android:layout_marginLeft="2dp"
                          android:layout_height="wrap_content"
                          android:orientation="vertical">

                <LinearLayout android:layout_width="fill_parent"
                              android:padding="0dp"
                              android:layout_height="wrap_content"
                              android:paddingBottom="1dp"
                    android:orientation="horizontal">

                     <TextView
                        android:id="@+id/itemlv_managepond_Species"
                        android:layout_weight="1"
                        android:text="Tilapia, Bangus"
                        android:textStyle="bold"
                        android:textSize="15sp"
                        android:textColor="#3a3a3a"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"/>

                </LinearLayout>


                <TextView
                    android:id="@+id/itemlv_managepond_quantity"
                    android:text="Quantity: 10000"
                    android:textSize="14sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

<!--a-->
                <TextView
                    android:id="@+id/itemlv_managepond_datestocked"
                    android:text="Stocked: Sepetember 28, 2015"
                    android:textSize="14sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>


            </LinearLayout>

    </LinearLayout>





</LinearLayout>